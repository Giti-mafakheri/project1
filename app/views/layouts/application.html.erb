<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-light navbar-expand-lg " style="background-color: #e3f2fd;">
        <%= link_to 'Home', root_path,:class => 'navbar-brand' %>
          <% if @current_user.present? %>
             <% if @current_user.admin? %>
              <%= link_to 'All Users' , users_path,:class => 'navbar-brand'  %>
              <% end %>

          <%= link_to 'New Shelf', new_shelf_path,:class => 'navbar-brand'  %>
        <%= link_to "Log out #{@current_user.name}", login_path, :method => 'delete',:class => 'navbar-brand'  %>
        <% else %>
        <%= link_to 'Sign up', new_user_path ,:class => 'navbar-brand' %>
        <%= link_to 'Login', login_path,:class => 'navbar-brand'  %>
        <% end %>

      </nav>
      <%= yield %>
    </div>
  </body>
</html>
