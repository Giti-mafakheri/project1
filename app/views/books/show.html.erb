<h2>showing the book</h2

  <h3><%= @book.title %></h3>
<div class="bsize form_group">
    <%= image_tag @book.cover, :class => 'img-fluid img-thumbnail' if @book.cover.present? %>
</div>



<div class="form-group">
  <%= label_tag :Title %>
 <%= link_to @book.title , @book %>

</div>


<div class="form_group">
  <%= label_tag :Cover %>
  <%= link_to (@book.cover),@book.cover %>
</div>





  <div class="controls ">
    <%= link_to "Edit #{@book.title}", edit_book_path(@book) , :class => 'btn btn-primary'%>
    <%= link_to "Delete #{@book.title}" , @book , :method => 'delete', :class => 'btn btn-primary' %>

  </div>
