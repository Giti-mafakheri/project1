<%= form_for @book do |b| %>


<div class="form-group">
  <%= b.label :title %>
  <%= b.text_field :title , :required => true %>
</div>




<div class="form-group">
  <%= b.label :cover %>
  <%= b.url_field :cover %>
</div>



<div class="form-group">
<%= b.label:Genre %>
<%= b.select :genre_id,Genre.pluck(:name , :id),{}, :include_blank => true %>
</div>


<%= b.submit %>
<% end %>
